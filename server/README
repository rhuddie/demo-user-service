1) Create conda env:
conda create --name demo-server python=3.6

2) activate
source activate demo-server

3) Install requirements
(demo-server) $ pip install -r requirements.txt 

python3 server/server.py --setup

curl 'http://127.0.0.1:5000/api/add' --data 'username=chip8&email=biff%40hotmail.com67&dob=123456&address=12312313'
curl http://127.0.0.1:5000/api/list

python3 -m pytest ./server/tests/test_rest_api.py


BUILD DOCKER IMAGE:
/demo-user-service/server$ docker build -t demo-server .

RUN THE SERVER:
demo-user-service/server$ sudo docker run -p 5000:5000 demo-server
